<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/layout_chat_contact_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true"
        android:clickable="true"
        >
        <com.balysv.materialripple.MaterialRippleLayout
            android:id="@+id/ripple"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/RippleStyleGray">
            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingVertical="10dp"
                android:padding="8dp"
                >
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/layout_chat_contact_image"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/person_image" />
                <RelativeLayout
                    android:layout_toRightOf="@+id/layout_chat_contact_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="10dp"
                    >
                    <TextView
                        android:id="@+id/layout_chat_contact_name"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:text="Person Name"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:gravity="center_vertical"
                        />
                    <TextView
                        android:id="@+id/layout_chat_contact_message"
                        android:layout_width="match_parent"
                        android:layout_height="28dp"
                        android:text="Message "
                        android:textColor="@color/colorBlack"
                        android:maxLines="2"
                        android:textSize="15sp"
                        android:layout_below="@+id/layout_chat_contact_name"
                        android:gravity="center_vertical"/>
                    <TextView
                        android:id="@+id/layout_chat_contact_date_time"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:text="4/3/2020 2:32"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:gravity="center_vertical"
                        android:layout_below="@+id/layout_chat_contact_message"
                        android:maxLines="3"/>
                </RelativeLayout>
            </RelativeLayout>
        </com.balysv.materialripple.MaterialRippleLayout>
    </com.google.android.material.card.MaterialCardView>
</RelativeLayout>