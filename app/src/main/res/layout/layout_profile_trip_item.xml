<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:id="@+id/layout_profile_trip_item_card_view"
    android:layout_marginHorizontal="15sp"
    app:cardElevation="7dp"
    app:cardUseCompatPadding="true"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_gravity="center"
        >
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/layout_profile_trip_item_trip_image_card_view"
            android:layout_width="80dp"
            android:layout_height="120dp"
            app:cardCornerRadius="10dp"
            android:elevation="10dp">
            <ImageView
                android:id="@+id/layout_profile_trip_item_trip_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/trip_location"
                android:scaleType="centerCrop"/>
        </com.google.android.material.card.MaterialCardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_toRightOf="@+id/layout_profile_trip_item_trip_image_card_view"
            android:orientation="vertical"
            android:layout_marginLeft="15sp"
            >
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/layout_profile_trip_title"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="Trip Title"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:textSize="18sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/icon_location"
                    />
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/layout_profile_trip_destination"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Destination"
                    android:textSize="15sp"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/layout_profile_trip_description"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Some Details"
                android:maxLines="3"
                android:textSize="15sp"
                />
        </LinearLayout>


    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>